# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_PATH=/secrets/firebase-key.json

# Server Configuration
PORT=8080
COORDINATION_DOMAIN=tunnel.yourdomain.com
CORS_ORIGINS=*

# Redis Configuration
REDIS_URL=redis://redis:6379

# Twilio TURN Configuration (recommended)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Fallback TURN Configuration (when Twilio not available)
# Metered TURN servers (get free account at https://dashboard.metered.ca/signup)
METERED_TURN_USERNAME=your-metered-username
METERED_TURN_CREDENTIAL=your-metered-credential
METERED_TURN_SERVERS=turn:a.relay.metered.ca:80,turn:a.relay.metered.ca:443

# Custom TURN servers (optional)
CUSTOM_TURN_SERVERS=turn:your-server.com:3478
CUSTOM_TURN_USERNAME=your-username
CUSTOM_TURN_CREDENTIAL=your-credential

# Optional: Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20
# Pantheon Environment Configuration
# Copy this file to .env and update with your values

# Firebase Configuration (Public keys - safe for client-side)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Server Configuration
SERVER_PORT=3001
SIGNALING_SERVER_URL=http://localhost:3001

# Production Signaling Server (for deployment)
VITE_PROD_SIGNALING_SERVER_URL=https://your-signaling-server.com

# Twilio Configuration (Server-side only)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# TURN Server Configuration
TURN_SECRET=your_turn_secret
COORDINATION_DOMAIN=your-domain.com

# Fallback TURN Server Configuration (for when Twilio is unavailable)
VITE_FALLBACK_TURN_USERNAME=openrelayproject
VITE_FALLBACK_TURN_CREDENTIAL=openrelayproject
VITE_FALLBACK_TURN_URL_UDP=turn:openrelay.metered.ca:80
VITE_FALLBACK_TURN_URL_TCP=turn:openrelay.metered.ca:443
VITE_FALLBACK_TURN_URL_TCP_SSL=turn:openrelay.metered.ca:443?transport=tcp

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8100

# Ollama Configuration
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_TIMEOUT=30000

# App Configuration
APP_NAME=Pantheon
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=info

# Device Configuration
DEVICE_AUTO_REGISTER=true
DEVICE_HEARTBEAT_INTERVAL=30000
DEVICE_OFFLINE_TIMEOUT=60000

# Build Configuration
NODE_ENV=development